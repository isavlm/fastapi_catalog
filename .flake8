[flake8]
exclude = .git,__pycache__,build,dist,venv,__init__.py,.venv,infrastructure
max-line-length = 120
ignore = 
    # Ignore whitespace at end of line
    W291,
    # Ignore blank line contains whitespace
    W293,
    # Ignore line break after binary operator
    W504,
    # Ignore missing whitespace after ','
    E231,
    # Ignore too many blank lines
    E303,
    # Ignore expected 2 blank lines
    E302,
    # Ignore line too long
    E501,
    # Ignore unused imports
    F401,
    # Ignore redefinition of unused name
    F811,
    # Ignore block comment should start with #
    E265,
    # Ignore multiple spaces after operator
    E241,
    # Ignore missing newline at end of file
    W292,
    # Ignore bracket indentation
    E123,
    # Ignore continuation line indentation
    E131,
    # Ignore spacing before inline comment
    E261,
    # Ignore inline comment format
    E262,
    # Ignore blank lines after function
    E305,
    # Ignore unused variables
    F841